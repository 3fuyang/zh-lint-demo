---
export interface Props {
  title: string
}

const { title } = Astro.props

const DESC = "An intuitive playground for zhlint, a Chinese markdown content formatter."
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content={DESC}
    />
    <title>{title}</title>
  </head>
  <body class="dark:bg-black bg-white text-slate-800 dark:text-slate-200">
    <slot />
  </body>
</html>
