---
import Layout from '../layouts/Layout.astro'
import Section from '../components/Section.astro'
import Diff from '../components/Diff'

const TITLE = 'Zhlint Playground'
const REPO_URL = "https://github.com/3fuyang/zh-lint-demo"
const ZHLINT_REPO_URL = "https://github.com/Jinjiang/zhlint"
---

<style is:global>
  details[open] .right-arrow {
    transform: rotate(90deg);
  }
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }
</style>
<Layout title={TITLE}>
  <main>
    <Section>
      <div class="flex justify-between">
        <h1 class="tracking-wide text-lg">{TITLE}</h1>
        <a
          class="transition-colors hover:text-slate-500 dark:hover:text-slate-300"
          href={REPO_URL}
          target="_blank"
          rel="noreferrer"
        >
          GitHub
        </a>
      </div>
    </Section>
    <Section>
      This is an intuitive playground for
      <a
        class="text-green-700 transition-colors hover:text-green-600 focus:text-green-600 hover:underline focus:underline"
        href={ZHLINT_REPO_URL}
        target="_blank"
        rel="noreferrer"
      >
        zhlint
      </a>.
    </Section>
    <Section>
      <Diff client:idle />
    </Section>
  </main>
</Layout>
